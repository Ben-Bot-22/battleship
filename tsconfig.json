{
  "compilerOptions": {
    "types": ["jest", "node"], // added to solve test issue
    "strict": true,
    "outDir": "./dist/",
    "rootDir": "./src",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./dist/**/*"]
}
